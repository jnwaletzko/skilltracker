<%= form_for @skill do |f| %>

  <% if @skill.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@skill.errors.count, "error") %>
        prohibited this article from being saved:
      </h2>
      <ul>
        <% @skill.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>


