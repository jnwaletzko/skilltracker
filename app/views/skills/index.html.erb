<h1>Listing skills</h1>
<%= link_to 'New skill', new_skill_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>

  <% @skills.each do |skill| %>
    <tr>
      <td><%= skill.title %></td>
      <td><%= skill.description %></td>
      <td><%= link_to 'Show', skill_path(skill) %></td>
      <td><%= link_to 'Edit', edit_skill_path(skill) %></td>
      <td><%= link_to 'Destroy', skill_path(skill), 
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
